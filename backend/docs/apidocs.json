{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Backend Rest API"
    },
    "servers": [{
        "url": "localhost:8080"
    }],
    "paths": {
        "/auth/login": {
            "post": {
                "summary": "returns a token and user info on success",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LogInRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Succesful login",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LogInResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request with too short username or password",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Failed login with wrong password",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Failed login with wrong username",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "checks if a token is valid for a user",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "valid user login",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResponse"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "bad token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/signup": {
            "post": {
                "summary": "Signups a new user",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "format": "uuid"
                                }
                            }
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SignUpRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "created a new user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "username, email or password was not valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "username was already taken",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/logout": {
            "post": {
                "summary": "logs a user out",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "format": "uuid"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "user was logged out and token was removed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/accounts/myAccounts": {
            "get": {
                "summary": "Gets all accounts for the user",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "gets all accounts for the user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/AccountResponse"
                                    }
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "token not valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/accounts/createAccount": {
            "post": {
                "summary": "creates an account for the user",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AccountRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "created a new account",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AccountResponse"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "token not valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "name or type not valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/accounts/deposit": {
            "post": {
                "summary": "deposits money into specified account",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/DepositWithdrawRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "the money has been deposited",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AccountResponse"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "token not valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "either account doesn't exist or amount is not valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/accounts/withdraw": {
            "post": {
                "summary": "Withdraws money from an account",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/DepositWithdrawRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "the money has been withdrawn from the account",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AccountResponse"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "token not valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "account doesn't exist or amount is not valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/transactions/myTransactions": {
            "get": {
                "summary": "gets all transaction for all of the users accounts",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "gets all transactions for users accounts",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/TransactionResponse"
                                    }
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "token not valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/transactions/myTransactions/{accountId}": {
            "get": {
                "summary": "gets transaction for given account",
                "parameters": [
                    {
                        "in": "path",
                        "name": "accountId",
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        },
                        "required": true
                    },
                    {
                        "in": "header",
                        "name": "Authorization",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "found all transactions for account",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/TransactionResponse"
                                    }
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "token not valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "account not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/transactions/from/{accountId}": {
            "get": {
                "summary": "gets all transactions where given account sent it",
                "parameters": [
                    {
                        "required": true,
                        "in": "path",
                        "name": "accountId",
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    },
                    {
                        "in": "header",
                        "name": "Authorization",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "found all transactions where account sent them",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/TransactionResponse"
                                    }
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "token not valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "account was not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/transactions/reciever/{accountId}": {
            "get": {
                "summary": "gets all transactions where given account reciever it",
                "parameters": [
                    {
                        "required": true,
                        "in": "path",
                        "name": "accountId",
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    },
                    {
                        "in": "header",
                        "name": "Authorization",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "found all transactions where account recieved them",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/TransactionResponse"
                                    }
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "token not valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "account was not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/transactions/transfer": {
            "post": {
                "summary": "transfers money between accounts",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "format": "uuid"
                                }
                            }
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/TransactionRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "transfer was successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/TransactionResponse"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "token not valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "from account, to account or amount was not valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "LogInRequest": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "description": "username of user to be logged in"
                    },
                    "password": {
                        "type": "string",
                        "description": "password of user to be logged in"
                    }
                }
            },
            "UserResponse": {
                "type": "object",
                "properties": {
                    "Id": {
                        "type": "integer",
                        "format": "int64",
                        "description": "id of user that is logged in"
                    },
                    "username": {
                        "type": "string",
                        "description": "username of user that is logged in"
                    },
                    "email": {
                        "type": "string",
                        "description": "email of user that is logged in"
                    }

                }
            },
            "LogInResponse": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string",
                        "description": "autogenerated uuid token to follow the logged in user"
                    },
                    "userResponse": {
                        "$ref": "#/components/schemas/UserResponse",
                        "description": "UserResponse that shows the user info"
                    }
                }
            },
            "SignUpRequest": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "description": "username of user"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "description": "email of user"
                    },
                    "password": {
                        "type": "string",
                        "description": "password of user"
                    }
                }
            },
            "AccountRequest": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "name of account to be made"
                    },
                    "type": {
                        "type": "string",
                        "description": "type of account to be made."
                    }
                }
            },
            "AccountResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "description": "id of account"
                    },
                    "accountNumber": {
                        "type": "integer",
                        "format": "int32",
                        "description": "unique accountNumber for each account"
                    },
                    "type": {
                        "type": "string",
                        "description": "type of account"
                    },
                    "userId": {
                        "type": "integer",
                        "format": "int64",
                        "description": "id of user that owns the account"
                    },
                    "name": {
                        "type": "string",
                        "description": "name of the account"
                    },
                    "balance": {
                        "type": "number",
                        "description": "amount of money in the account"
                    },
                    "interestRate": {
                        "type": "number",
                        "description": "interestRate of the account"
                    }
                }
            },
            "DepositWithdrawRequest": {
                "type": "object",
                "properties": {
                    "amount": {
                        "type": "number",
                        "description": "amount of money to be withdrawn or deposited"
                    },
                    "accountId": {
                        "type": "integer",
                        "format": "int64",
                        "description": "id of account to either put money into or take it out from"
                    }
                }
            },
            "TransactionResponse": {
                "type": "object",
                "properties": {
                    "Id": {
                        "type": "integer",
                        "format": "int64",
                        "description": "id of transaction"
                    },
                    "fromId": {
                        "type": "integer",
                        "format": "int64",
                        "description": "id of account that sent money"
                    },
                    "reciverId": {
                        "type": "integer",
                        "format": "int64",
                        "description": "id of account that recived money"
                    },
                    "amount": {
                        "type": "number",
                        "description": "amount of money transfered"
                    },
                    "transactionDate": {
                        "type": "string",
                        "format": "date",
                        "description": "date of the transaction"
                    }
                }
            },
            "TransactionRequest": {
                "type": "object",
                "properties": {
                    "from": {
                        "type": "integer",
                        "format": "int64",
                        "description": "id of account to send money"
                    },
                    "to": {
                        "type": "integer",
                        "format": "int64",
                        "description": "id of account to recieve money"
                    },
                    "amount": {
                        "type": "number",
                        "description": "amount of money to be sent"
                    }
                }
            }
        }
    }
}